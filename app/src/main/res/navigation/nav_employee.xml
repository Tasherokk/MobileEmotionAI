<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_employee"
    app:startDestination="@id/authGateFragment">

    <fragment
        android:id="@+id/employeeHomeFragment"
        android:name="com.example.emotionsai.ui.employee.EmployeeHomeFragment"
        android:label="Home">

        <!-- ✅ ДОБАВЬ -->
        <action
            android:id="@+id/action_employeeHome_to_events"
            app:destination="@id/employeeEventsFragment" />

        <!-- (опционально) -->
        <action
            android:id="@+id/action_employeeHome_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.emotionsai.ui.employee.camera.CameraFragment"
        android:label="Camera">
        <argument
            android:name="eventId"
            app:argType="integer" />
        <argument
            android:name="eventTitle"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_camera_to_result"
            app:destination="@id/resultFragment" />
    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.emotionsai.ui.employee.result.ResultFragment"
        android:label="Result">
        <argument
            android:name="emotion"
            app:argType="string" />
        <action
            android:id="@+id/action_resultFragment_to_employeeEventsFragment"
            app:destination="@id/employeeEventsFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.emotionsai.ui.profile.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_employeeHomeFragment"
            app:destination="@id/employeeHomeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_employeeEventsFragment"
            app:destination="@id/employeeEventsFragment" />
    </fragment>
    <fragment
        android:id="@+id/faceLoginCameraFragment"
        android:name="com.example.emotionsai.ui.employee.camera.FaceLoginCameraFragment"
        android:label="Face Login">
        <action
            android:id="@+id/action_faceLogin_to_home"
            app:destination="@id/employeeHomeFragment"
            app:popUpTo="@id/employeeHomeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/authGateFragment"
        android:name="com.example.emotionsai.ui.faceauth.gate.AuthGateFragment"
        android:label="Auth Gate">
        <action
            android:id="@+id/action_authGate_to_faceLogin"
            app:destination="@id/faceLoginCameraFragment" />
        <action
            android:id="@+id/action_authGate_to_home"
            app:destination="@id/employeeHomeFragment"
            app:popUpTo="@id/employeeHomeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/employeeEventsFragment"
        android:name="com.example.emotionsai.ui.employee.events.EmployeeEventsFragment"
        android:label="My Events">
        <action
            android:id="@+id/action_employeeEventsFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_employeeEventsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_employeeEventsFragment_to_employeeHomeFragment"
            app:destination="@id/employeeHomeFragment" />
    </fragment>

</navigation>
