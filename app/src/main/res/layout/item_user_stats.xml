                <TextView
                    android:id="@+id/tvAvgConfidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82%"
                    android:textSize="12sp"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <TextView
