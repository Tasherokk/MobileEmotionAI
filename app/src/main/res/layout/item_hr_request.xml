<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: Title + Status badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Request"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Status badge (фон можно потом заменить/сделать по статусу программно) -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From: employee"
            android:layout_marginTop="6dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Meta row: messages count + last message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Small dot separator feel -->
            <TextView
                android:id="@+id/tvMessagesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" msgs"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="last_message_at"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Bottom row: created at -->
        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="created_at"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Soft divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/card_surface" />

        <!-- Hint / affordance row (можно убрать, но выглядит “дороже”) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to open details"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/text_hint" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
