<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analysis Complete! âœ¨"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Main Emotion Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEmotionEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜Š"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/tvEmotionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAPPY"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your emotion:"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Confidence Section -->
        <TextView
            android:id="@+id/tvConfidenceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardEmotion"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="87%"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="@id/tvConfidenceLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvConfidenceLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressConfidence"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:progress="87"
            android:max="100"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvConfidenceLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Other Emotions -->
        <TextView
            android:id="@+id/tvOtherEmotions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other emotions:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/progressConfidence"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEmotion2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â€¢ Neutral 8%"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvOtherEmotions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEmotion3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â€¢ Surprised 5%"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmotion2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Motivational Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmotion3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Great mood! Keep up the positive vibes! ðŸŒŸ"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:padding="16dp"
                android:gravity="center" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š View My Stats"
            android:layout_marginTop="32dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/cardMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âœ“ Done"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnViewStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
