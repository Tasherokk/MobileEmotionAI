<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Analysis Complete! âœ¨"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Main Emotion Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmotion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/stroke_soft"
            app:cardBackgroundColor="@color/card_primary"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="26dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEmotionEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜Š"
                    android:textSize="78sp"
                    android:includeFontPadding="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Your emotion"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:alpha="0.95"/>

                <TextView
                    android:id="@+id/tvEmotionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAPPY"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="14dp"
                    android:includeFontPadding="false"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Motivational Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/stroke_soft"
            app:cardBackgroundColor="@color/card_primary"
            app:layout_constraintTop_toBottomOf="@id/cardEmotion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Ð¼Ð°Ð»ÐµÐ½ÑŒÐºÐ¸Ð¹ â€œÐ»ÐµÐ¹Ð±Ð»â€ ÐºÐ°Ðº Ð² Ñ‚Ð²Ð¾Ð¸Ñ… ÐºÐ°Ñ€Ñ‚Ð¾Ñ‡ÐºÐ°Ñ… -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motivation"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_hint"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Great mood! Keep up the positive vibes! ðŸŒŸ"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    tools:text="Great mood! Keep up the positive vibes! ðŸŒŸ"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- Done button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="âœ“ Done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            app:cornerRadius="14dp"
            app:layout_constraintTop_toBottomOf="@id/cardMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
